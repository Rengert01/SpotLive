{
  "name": "backend",
  "version": "1.0.0",
  "main": "index.js",
  "nodemonConfig": {
    "ignore": [
      "src/**/*.test.ts",
      "src/**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "src"
    ],
    "exec": "node -r tsconfig-paths/register -r ts-node/register src/index.ts",
    "ext": "ts"
  },
  "scripts": {
    "build1": "npx tsc -p tsconfig.json",
    "start1": "node -r tsconfig-paths/register -r ts-node/register src/index.ts",
    "build2": "npx tsc",
    "start2": "node dist/index.js",
    "dev": "nodemon src/index.ts",
    "tests": "jest --setupFiles=dotenv/config",
    "prettier:write": "npx prettier --write .",
    "prettier:check": "npx prettier --check .",
    "lint": "eslint .",
    "db:push": "POSTGRES_HOST=localhost npx drizzle-kit push",
    "db:studio": "POSTGRES_HOST=localhost npx drizzle-kit studio"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "@types/multer": "^1.4.12",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.20.3",
    "cookie-parser": "^1.4.7",
    "cookie-session": "^2.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.36.3",
    "express": "^4.21.1",
    "express-session": "^1.18.1",
    "fs-extra": "^11.2.0",
    "multer": "^1.4.5-lts.1",
    "passport": "^0.7.0",
    "passport-local": "^1.0.0",
    "pg": "^8.13.1",
    "pg-hstore": "^2.3.4",
    "tsconfig-paths": "^4.2.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.14.0",
    "@jest/globals": "^29.7.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/cookie-parser": "^1.4.7",
    "@types/cookie-session": "^2.0.49",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/express-session": "^1.18.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.7.5",
    "@types/passport": "^1.0.16",
    "@types/passport-local": "^1.0.38",
    "@types/pg": "^8.11.10",
    "@types/supertest": "^6.0.2",
    "drizzle-kit": "^0.28.1",
    "eslint": "9.14.0",
    "get-audio-duration": "^4.0.1",
    "globals": "^15.12.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.7",
    "prettier": "^3.3.3",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.13.0"
  }
